{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"outDir": "./dist",
		"sourceMap": true,
		"declaration": false,
		"resolveJsonModule": true,
		"moduleResolution": "node",
		"esModuleInterop": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"lib": [
			"es2018"
		]
	},
	"include": [
		"src/**/*.ts",
		"src/index.ts"
	],
	"exclude": [
		"node_modules"
	]
}